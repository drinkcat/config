bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym $mod+XF86MonBrightnessUp exec xbacklight -set 100
bindsym $mod+XF86MonBrightnessDown exec xbacklight -set 0

bindsym XF86AudioMute exec /home/nicolas/bin/snd mute
bindsym XF86AudioLowerVolume exec /home/nicolas/bin/snd down
bindsym XF86AudioRaiseVolume exec /home/nicolas/bin/snd up

for_window [class="MPlayer"] floating enable

bindsym $mod+z [class="MPlayer"] move workspace current

client.urgent #2f343a #900000 #ffffff #900000

bindsym $mod+p exec /home/nicolas/bin/scale
